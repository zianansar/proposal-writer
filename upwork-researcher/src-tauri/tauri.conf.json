{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Upwork Research Agent",
  "version": "0.1.1",
  "identifier": "com.upwork-researcher.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Upwork Research Agent",
        "width": 900,
        "height": 700
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' https://api.anthropic.com; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "signCommand": "powershell -File scripts/windows-sign.ps1 %1",
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "macOS": {
      "signingIdentity": null,
      "minimumSystemVersion": "12.0"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJCQjQwQzkxRTZBRjEwRUUKUldUdUVLL21rUXkwSzdtbjJVdk1PMytvSWVUbFh1UFZYQ2crSkp5K3JseDVaZjFWSFpWNFdnTjMK",
      "endpoints": [
        "https://github.com/USER/REPO/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
